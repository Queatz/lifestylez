<p id="notice"><%= notice %></p>

<h1>Listing Life Styles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @life_styles.each do |life_style| %>
      <tr>
        <td><%= life_style.user_id %></td>
        <td><%= life_style.title %></td>
        <td><%= life_style.description %></td>
        <td><%= link_to 'Show', life_style %></td>
        <td><%= link_to 'Edit', edit_life_style_path(life_style) %></td>
        <td><%= link_to 'Destroy', life_style, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

